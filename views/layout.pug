		link(rel="stylesheet" href="https://js.arcgis.com/3.23/esri/css/esri.css")
	body
		.wrapper.footer_fixed
			// Sidebar Holder
			nav#sidebar
				.sidebar-header
					h3 Vízkészlet-gazdálkodás
				ul.list-unstyled.components
					p= title
					li.active
						a(href="#homeSubmenu" data-toggle="collapse" aria-expanded="false") Home
						ul#homeSubmenu.collapse.list-unstyled
							li
								a(href="/map") Map
							li
								a(href="#") Home 2
							li
								a(href="#") Home 3
					li
						a(href="#") About
						a(href="#pageSubmenu" data-toggle="collapse" aria-expanded="false") Pages
						ul#pageSubmenu.collapse.list-unstyled
							li
								a(href="#") Page 1
							li
								a(href="#") Page 2
							li
								a(href="#") Page 3
					li
						a(href="#") Portfolio
					li
						a(href="#") Contact
				//ul.list-unstyled.CTAs
					li
						a.download(href="https://bootstrapious.com/tutorial/files/sidebar.zip") Download source
					li
						a.article(href="https://bootstrapious.com/p/bootstrap-sidebar") Back to article
			// Page Content Holder
			#content
				nav.navbar.navbar-default.navbar-fixed-top
					.container-fluid
						.navbar-header
							button#sidebarCollapse.btn.btn-info.navbar-btn(type="button")
								i.glyphicon.glyphicon-align-left
								span Toggle Sidebar
						#bs-example-navbar-collapse-1.collapse.navbar-collapse
							ul.nav.navbar-nav.navbar-right
								li
									a(href="#") Page
								li
									a(href="#") Page
								li
									a(href="#") Page
								li
									a(href="#") Page
				block content
			footer
				.pull-right
					| Készítette: 
					a(href="http://controlsoft.hu") Controlsoft Kft.
				.clearfix
		// jQuery CDN
		script(src="https://code.jquery.com/jquery-1.12.0.min.js")
		// Bootstrap Js CDN
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
		// jQuery Custom Scroller CDN
		script(src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js")
		//script(src="/javascripts/init_map.js")
		//script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBaLMBmv1VbhuyfQPo-Q7jSAyBsI1rAvRY&callback=initMap" async="" defer="")
		//script(src="https://js.arcgis.com/4.6/")
		script(src="https://js.arcgis.com/3.23/")
		script(src="/javascripts/init_arcgis_map.js")
		script(type="text/javascript").
			$(document).ready(function () {
			$("#sidebar").mCustomScrollbar({
			theme: "minimal"
			});
			$('#sidebarCollapse').on('click', function () {
			$('#sidebar, #content').toggleClass('active');
			$('.collapse.in').toggleClass('in');
			$('a[aria-expanded=true]').attr('aria-expanded', 'false');
			});
			});
