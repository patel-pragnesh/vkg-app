extends ../layout

block content
	div.container-fluid.mt10
		div.row
			div.col-md-10
				//- h1=title
			div.col-md-2
				a(href="/modelling_import" class="btn btn-primary pull-right btn-new") Vissza
		div.row
			div.col-md-12
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Alapadatok
						div.panel-body
							div.row
								div.col-md-12
									div.form-group
										div.col-md-2
											label(class="") Megnevezés:
										div.col-md-10
											span(class="")=modelling.name
								div.col-md-12
									div.form-group
										div.col-md-2
											label(class="") Leírás:
										div.col-md-10
											span(class="")=modelling.description
								div.col-md-12
									div.form-group
										div.col-md-2
											label(class="") Időszak:
										div.col-md-10
											span(class="")=modelling.date_for
								div.col-md-12
									div.form-group
										div.col-md-2
											label(class="") Vízfolyás:
										div.col-md-10
											span(class="")=modelling.river_name
			div.col-md-12
				form(action=form_link, method="post", enctype="multipart/form-data")
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Új adat betöltés
						div.panel-body
							div.row
								div.col-md-12
									div.form-group.fileContainer
										input(type="file" name="fileUploaded" id="fileUploaded" class="inputFile")
										label(for="fileUploaded" class="btn btn-primary file-label") Fájl kiválasztása
							div.row
								div.col-md-12
									div.form-group
										label(for="user_description") Leírás
										input(type="text" name="user_description" placeholder="Adatbetöltés leírása" class="form-control")
										if errors
											for error in errors
												if error.param == 'user_description'
													div.text-danger=error.msg
						div.panel-footer
							input(type="hidden" name="modelling" value=modelling.id)
							input(type="hidden" id="socketId" name="socketId" value="")
							input(type="submit" class="btn btn-primary pull-right" value="Mentés")
							div.clearfix
			div.col-md-12
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Betöltött adatok
						div.panel-body
							table.table.table-striped
								if (meta_datas)
									thead
										tr
											th Projekt
											th -tól
											th -ig
											th Típus
											th Időintervallum
											th Mértékegység
											th Szelvény
											th.text-right Műveletek
									tbody
										each m_d in meta_datas
											tr
												td=m_d.projekt_name
												td=m_d.date_from
												td=m_d.date_to
												td=m_d.type
												td=m_d.time_interval_name
												td=m_d.unit
												td=m_d.profile_name
												td
													a(href="/modelling_import/meta_data/"+m_d.id+"/delete" class="btn btn-info pull-right mr5")
														span.glyphicon.glyphicon-erase
								else if (locations_page)
									thead
										tr
											//- th Adat darabszám (db)
											th Leírás
											th.text-right Műveletek
									tbody
										each l_f in locations_page
											tr
												//- td=l_f.count
												td=l_f.user_description
												td
													a(href="/modelling_import/"+l_f.location_type+"/"+modelling.id+"/"+l_f.description_id+"/delete" class="btn btn-info pull-right mr5")
														span.glyphicon.glyphicon-erase
						div.panel-footer
							ul.pagination.m0.pull-right
								- for(var i = 1; i < page_count+1; i++)
									li
										a(href="/modelling_import/"+modelling.id+"/"+data_type+"?page="+i)=i
							div.clearfix
